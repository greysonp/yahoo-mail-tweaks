{
  "name": "Yahoo! Mail Tweaks",
  "manifest_version": 2,
  "version": "1.2.2",

  "description": "Makes Y! Mail a little nicer.",

  "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
  },

  "browser_action": {
    "default_icon": "img/icon-32x32.png"
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["http://*.mail.yahoo.com/*",
                  "https://*.mail.yahoo.com/*"],
      "js": [
        "js/libs/jquery-2.1.1.min.js",
        "js/Utils.js",
        "js/AutoRefresh.js",
        "js/NonInboxUnreadCount.js",
        "js/SidebarResize.js",
        "js/contentscript.js"
      ],

      "css": [
        "css/contentscript.css"
      ],
      
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": [ "js/background.js" ]
  },

  "permissions": [
    "notifications",
    "tabs",
    "storage"
  ],

  "web_accessible_resources": [
    "img/*"
  ]
}
